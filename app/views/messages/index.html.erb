<%= render "todos/todoNav" %>

<div class="container">


  <div class="sub-nav">
    <ul class="nav nav-tabs" role="tablist">
      <li class="active">
        <%= link_to "Blogs", messages_path %>
      </li>
      <li><%= link_to "Create Blog", new_message_path %></li>
    </ul>
  </div>

  <%= render "todos/todoLayoutTop" %>

<!-- BLOG ENTRY -->
  <% @messages.each do |message| %>
  <div class="panel panel-default">
    <div class="row ">
      <div class="col-md-1">
        <%= link_to message, class: "btn btn-xs btn-primary top-buffer-index-top" do %>
          <span class="has-tooltip" data-toggle="tooltip" title="Show Blog" >
          <i class="fa fa-eye"></i></span><% end %>

        <%= link_to edit_message_path(message), class: "btn btn-xs btn-primary top-buffer-index", data: { modal: true } do %>
          <span class="has-tooltip" data-toggle="tooltip" title="Edit Blog" >
          <i class="fa fa-pencil"></i></span><% end %>

        <%= link_to message, method: :delete,
            data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger top-buffer-index" do %>
            <span class="has-tooltip" data-toggle="tooltip" title="Delete Blog" >
            <i class="fa fa-trash"></i></span><% end %>
        <%= link_to new_message_path, class:"btn btn-xs btn-success top-buffer-index" do %>
            <span class="has-tooltip" data-toggle="tooltip" title="Create New Blog" >
            <i class="fa fa-plus"></i></span><% end %>
      </div>
      <div class="col-md-11 ">
        <div class="row">
          <div class="col-md-11">
            <p><strong>Title: </strong> <%= message.name %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-11">
            <p class="truncate"><%= message.content %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-11">
            <p><strong>Comments: </strong>
              <% if message.comments.count == 1 %>
                Yes. There is <%= message.comments.count %> comments.</p>
              <% elsif message.comments.count > 1 %>
                Yes. There are <%= message.comments.count %> comments.</p>
              <% else %>
                No. There are no comments.</p>
            <% end %>
          </p>
          </div>
        </div>
        <div class="row ">
          <div class="col-md-11">
            <p><strong>created at:</strong> <%= message.created_at.strftime("%A %b %d %Y %I:%M %p %Z") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% end %>
<!-- BLOG ENTRY END -->
