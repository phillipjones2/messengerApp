<%= render "header" %>

<% if @message.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

    <ul>
    <% @message.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="create">
  <div class="container">
    <%= form_for(@message) do |f| %>
    <div class="field">
    		<%= f.label :message %>
    		<%= f.text_field :name %>
    		<%= f.text_field :email %>
    		<%= f.text_area :content %>
    </div>
    <div class="actions">
    		<%= f.submit "Update" %>

        <%= link_to "All Messages", messages_path(@message), :class => 'path_links' %>
    </div>
    <% end %>
  </div>
</div>
